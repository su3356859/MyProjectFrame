<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/activity_title_bar_style"
        android:background="@color/white"
        android:elevation="@dimen/dimen_8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_bar_height">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_button_app_color"
                android:onClick="back"
                android:src="@mipmap/top_back" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="添加客户"
                android:textColor="@color/app_color"
                android:textSize="@dimen/sp20" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="*"
                    android:textColor="@color/app_color" />

                <TextView
                    style="@style/item_title_text_style"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="需求类型:" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:enabled="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/chooes_hint"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <View
                style="@style/horizontal_gray_line_2dp"
                android:layout_height="@dimen/dimen_1dp" />
            <!--客户姓名-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="*"
                    android:textColor="@color/app_color" />

                <TextView
                    style="@style/item_title_text_style"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="客户姓名:" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <View
                style="@style/horizontal_gray_line_2dp"
                android:layout_height="@dimen/dimen_1dp" />
            <!--客户等级-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="*"
                    android:textColor="@color/app_color" />

                <TextView
                    style="@style/item_title_text_style"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="客户等级:" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:hint="@string/chooes_hint"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <View
                style="@style/horizontal_gray_line_2dp"
                android:layout_height="@dimen/dimen_1dp" />
            <!--联系电话-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="*"
                    android:textColor="@color/app_color" />

                <TextView
                    style="@style/item_title_text_style"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="联系电话:" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:background="@null"
                    android:hint="请输入联系电话"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <View
                style="@style/horizontal_gray_line_2dp"
                android:layout_height="@dimen/dimen_1dp" />
            <!--添加联系方式-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addPhone"
                    style="@style/item_title_text_style"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="添加联系方式"
                    android:textColor="#007aff"
                    android:textSize="@dimen/sp20" />

            </LinearLayout>

            <View
                style="@style/horizontal_gray_line_2dp"
                android:layout_height="@dimen/dimen_1dp" />
            <!--购房目的-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="*"
                    android:textColor="@color/app_color" />

                <TextView
                    style="@style/item_title_text_style"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="购房目的:" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:hint="@string/chooes_hint"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <View
                style="@style/horizontal_gray_line_2dp"
                android:layout_height="@dimen/dimen_1dp" />
            <!--性别-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="*"
                    android:textColor="@color/app_color" />

                <TextView
                    style="@style/item_title_text_style"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="性别:" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女" />
                </RadioGroup>
            </LinearLayout>

            <View
                style="@style/horizontal_gray_line_2dp"
                android:layout_height="@dimen/dimen_1dp" />
            <!--居室-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="*"
                    android:textColor="@color/app_color" />

                <TextView
                    style="@style/item_title_text_style"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="居室:" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:hint="@string/chooes_hint"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <View
                style="@style/horizontal_gray_line_2dp"
                android:layout_height="@dimen/dimen_1dp" />
            <!--价格区间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="*"
                    android:textColor="@color/app_color" />

                <TextView
                    style="@style/item_title_text_style"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="价格区间:" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:hint="@string/chooes_hint"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <View
                style="@style/horizontal_gray_line_2dp"
                android:layout_height="@dimen/dimen_1dp" />
            <!--意向购买社区-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:text="*"
                    android:textColor="@color/app_color" />

                <TextView
                    style="@style/item_title_text_style"
                    android:layout_marginLeft="@dimen/dimen_5dp"
                    android:text="意向购买社区:" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_15dp"
                    android:hint="@string/chooes_hint"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>

            <View
                style="@style/horizontal_gray_line_2dp"
                android:layout_height="@dimen/dimen_100dp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/commit"
        android:text="@string/commit_text"
        style="@style/commit_button_style" />
</LinearLayout>