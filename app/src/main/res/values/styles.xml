    <style name="ItemTextView">
        <item name="android:layout_marginTop">@dimen/type_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EntrustTabText">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TopBarButton">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/btn_pressed_selector</item>
        <item name="android:layout_width">@dimen/touch_view_min_height</item>
        <item name="android:layout_height">@dimen/touch_view_min_height</item>
